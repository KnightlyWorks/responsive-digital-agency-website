{
  "name": "responsive-digital-agency-website",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",

  "scripts": {
    "clean": "rm -rf dist",

    "build:css": "npx @tailwindcss/cli@latest -i ./src/styles/input.css -o ./dist/css/tailwind.css",
    "build:js": "node build.js",
    "build:static": "node build-static.js",
    "build": "npm-run-all clean build:css build:js build:static",

    "watch:css": "npx @tailwindcss/cli@latest -i ./src/styles/input.css -o ./dist/css/tailwind.css --watch",
    "watch:js": "node build.js --watch",
    "watch:html": "node watch-html.js",
    "serve": "npx live-server dist --port=3000",
    "dev": "npm-run-all --parallel watch:css watch:js watch:html serve",

    "fix-paths": "node fix-paths.js",
    "format": "prettier --write .",
    "svgo:optimize": "svgo -f assets/homepage/logos/ --config=svgo.config.js"
  },

  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "esbuild": "^0.25.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "svgo": "^4.0.0"
  },
  "dependencies": {
    "alpinejs": "^3.15.0",
    "aos": "^2.3.4"
  }
}
